@{
}
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Hệ thống Quản lý Điểm Rèn Luyện Sinh Viên</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Xin chào, @Context.Session.GetString("Username")</h5>
                    <p class="card-text">Bạn đã đăng nhập thành công vào hệ thống.</p>

                    <div class="mt-4">
                        <h6>Chức năng chính:</h6>
                        <ul>
                            <li>Quản lý thông tin sinh viên</li>
                            <li>Quản lý điểm rèn luyện</li>
                            <li>Báo cáo và thống kê</li>
                        </ul>
                    </div>

                    <a href="@Url.Action("Logout", "Account")" class="btn btn-danger mt-3">Đăng xuất</a>
                </div>
            </div>
        </div>
    </div>
</div>
